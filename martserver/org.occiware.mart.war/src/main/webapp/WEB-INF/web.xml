<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
        <display-name>Model@Runtime Server</display-name>
        <servlet>
            <servlet-name>MartServer</servlet-name>
            <servlet-class>org.occiware.mart.servlet.MainServlet</servlet-class> <!-- org.glassfish.jersey.servlet.ServletContainer -->
            <init-param>
                <param-name>jersey.config.server.provider.packages</param-name>
                <param-value>org.occiware.mart.servlet</param-value>
            </init-param>
            <load-on-startup>1</load-on-startup>
        </servlet>
        <servlet-mapping>
            <servlet-name>default</servlet-name>
            <url-pattern>/occinterface/*</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>MartServer</servlet-name>
            <!-- url-pattern>/occi/*</url-pattern --><!-- NB. alternate sub-mapping (for OCCI api) -->
            <url-pattern>/*</url-pattern>
        </servlet-mapping>
        <welcome-file-list>
            <welcome-file>index.html</welcome-file>
        </welcome-file-list>
</web-app>